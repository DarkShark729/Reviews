@page
@model MovieReviews1.Pages.Reviews.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Reviews</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.review[0].Game)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.review[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.review[0].ReviewDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.review[0].Rating)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.review) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
             <td>
                    @Html.DisplayFor(modelItem => item.Game.GameId)
            </td>
        </tr>
}
    </tbody>
</table>
