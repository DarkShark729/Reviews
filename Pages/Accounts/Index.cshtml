@model MovieReviews1.Pages.Accounts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Accounts</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].ReviewsHistory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].RatingHistory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].PrivateInformation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Account) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ReviewsHistory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingHistory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrivateInformation)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
